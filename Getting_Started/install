subprocess.Popen("pip3 install pyttsx3", shell=True, stdout=subprocess.PIPE).stdout.read()
subprocess.Popen("pip3 install speechrecognition", shell=True, stdout=subprocess.PIPE).stdout.read()
subprocess.Popen("pip3 install tk", shell=True, stdout=subprocess.PIPE).stdout.read()
subprocess.Popen("pip3 install wikipedia", shell=True, stdout=subprocess.PIPE).stdout.read()
subprocess.Popen("sudo apt install python3-pip", shell=True, stdout=subprocess.PIPE).stdout.read()
subprocess.Popen("sudo apt install python3-espeak", shell=True, stdout=subprocess.PIPE).stdout.read()
